{
	"manifest_version": 2,
	"name": "ZM Chameleon",
	"description": "This extension is designed to make the ZoneMinder viewing experience better!",
	"version": "1.0.1",
	"permissions": [
		"activeTab",
		"storage",
		"*://*/*",
		"declarativeContent"
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/zm/*view=montage*"
			],
			"exclude_matches": [
				"*://*/zm/*view=montagereview*"
			],
			"js": ["js/montage-content.js"]
		},
		{
			"matches": [
				"*://*/zm/*view=login*"
			],
			"js": ["js/login-content.js"]
		},
		{
			"matches": [
				"*://*/zm/*"
			],
			"js": ["js/general-content.js"]
		},		
		{
			"matches": [
				"*://*/zm/*view=watch*"
			],
			"js": ["js/watch-content.js"],
			"css": ["css/watch-content-stylesheet.css"]
		}
	],
	"background": {
		"scripts": ["js/background.js"],
		"persistent": true
	},
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon-32.png"
		},
		"default_title": "ZM Chameleon"
	},
	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"64": "icons/icon-64.png",
		"128": "icons/icon-128.png",
		"256": "icons/icon-256.png",
		"512": "icons/icon-512.png"
	}, 
	"web_accessible_resources": [
		"fonts/Digital7-1e1Z.ttf",
		"icons/icon-128.png"
	]
}