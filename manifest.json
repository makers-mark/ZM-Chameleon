{
	"manifest_version": 2,
	"name": "ZM Chameleon",
	"description": "This extension is designed to make the ZoneMinder viewing experience better!",
	"version": "1.4",
	"permissions": [
		"storage",
		"activeTab",
		"tabs",
		"*://*/zm",
		"declarativeContent"
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true,
		"chrome_style": true
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/zm/*view=montage*",
				"*://*/zm/index.php",
				"*://*/zm/*view=console*"
			],
			"js": ["js/general-content.js"]
		},		
		{
			"exclude_matches": [
				"*://*/zm/*view=montagereview*"
			],
			"matches": [
				"*://*/zm/*view=montage*"
			],
			"js": [
				"js/montage-content.js"
			],
			"css": ["css/montage-content-stylesheet.css"],
			"run_at": "document_start"
		},
		{
			"matches": [
				"*://*/zm/*view=login*",
				"*://*/zm/"
			],
			"js": ["js/login-content.js"]
		},
		{
			"matches": [
				"*://*/zm/*view=watch*"
			],
			"js": [
				"js/watch-content.js",
				"js/recordBtn.js",
				"js/mouseZoom.js",
				"js/fps.js"
			],
			"css": ["css/watch-content-stylesheet.css"],
			"run_at": "document_start"
		}
	],
	"background": {
		"scripts": ["js/background.js"],
		"persistent": true
	},
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon-32.png"
		},
		"default_title": "ZM Chameleon"
	},
	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"64": "icons/icon-64.png",
		"128": "icons/icon-128.png",
		"256": "icons/icon-256.png",
		"512": "icons/icon-512.png"
	}, 
	"web_accessible_resources": [
		"fonts/Digital7-1e1Z.ttf",
		"icons/pattern.gif",
		"js/scaleScript.js"
	]
}